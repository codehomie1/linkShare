<p style="color: green"><%= notice %></p>
<% content_for :title, "Comments" %>
<h1>Comments</h1>
<div id="comments">
  <% if !@comments.present? %>
    <h3>No comments here...</h3>
  <% end %>
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
      <%= link_to "Show this comment", link_comments_path %>
    </p>
  <% end %>
</div>
<%= link_to "New comment", new_link_comment_path %>
<br>
<%= link_to "Back to Links", links_path %>