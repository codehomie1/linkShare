<%= form_with(model: [@link, @link.comments.build], class: "form form--compact") do |form| %>
  <div class="form-group">
    <%= form.text_area :body, class: "form-input form-input--textarea form-input--textarea-sm", rows: 3, placeholder: "Add a comment..." %>
  </div>
  <div class="form-actions">
    <%= form.submit "Add comment", class: "btn btn--primary" %>
  </div>
<% end %>